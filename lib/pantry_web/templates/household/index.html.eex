<h2>Residence information for <%= @client.first_name <> " " <> @client.last_name %> </h2>
<table class="table">
  <thead>
    <tr>
      <th>Total members</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for household <- @household do %>

    <tr>
      <td><%= household.total_members %></td>
      <td class="text-right">
        <span><%= link "Show", to: client_household_path(@conn, :show, @client, household), class: "btn btn-danger btn-xs" %></span>
        <span><%= link "Edit", to: client_household_path(@conn, :edit,@client, household), class: "btn btn-danger btn-xs" %></span>
        <span><%= link "Delete", to: client_household_path(@conn, :delete, @client, household), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Household", to: client_household_path(@conn, :new, @client) %></span>
